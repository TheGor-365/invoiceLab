<%= form_with(model: client) do |f| %>
  <% if client.errors.any? %>
    <div class="alert alert-warning">
      <ul class="mb-0">
        <% client.errors.full_messages.each { |m| concat content_tag(:li, m) } %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="col-md-6">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="col-md-4">
      <%= f.label :locale, class: "form-label" %>
      <%= f.select :locale, options_for_select([["EN","en"],["RU","ru"],["ES","es"]], client.locale), {}, class:"form-select" %>
    </div>

    <div class="col-md-4">
      <%= f.label :timezone, class: "form-label" %>
      <%= f.select :timezone, timezone_options_for_select(client.timezone), {}, class: "form-select" %>
    </div>

    <div class="col-md-4">
      <%= f.label :currency, class: "form-label" %>
      <%= f.select :currency, options_for_select([["USD","USD"],["EUR","EUR"],["RUB","RUB"]], client.currency), {}, class:"form-select" %>
    </div>

    <div class="col-12">
      <%= f.label :note, class: "form-label" %>
      <%= f.text_area :note, rows: 3, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to t("helpers.cancel"), clients_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
