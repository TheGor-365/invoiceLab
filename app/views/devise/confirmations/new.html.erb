<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h4 mb-4 text-center"><%= t("devise.confirmations.new.title", default: "Resend confirmation instructions") %></h1>

        <%= render "devise/shared/error_messages", resource: resource %>

        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                              class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit t("devise.confirmations.new.submit", default: "Resend confirmation instructions"), class: "btn btn-primary" %>
          </div>
        <% end %>

        <hr class="my-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
