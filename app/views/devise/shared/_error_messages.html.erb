<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading mb-2"><%= t("errors.messages.not_saved.other", count: resource.errors.count, resource: resource.class.model_name.human.downcase, default: "#{resource.errors.count} errors prohibited this record from being saved:") %></h4>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
