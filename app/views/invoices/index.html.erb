<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><%= t("activerecord.models.invoice.other") %></h1>
  <%= link_to t("helpers.submit.invoice.create"), new_invoice_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t("activerecord.models.client.one") %></th>
      <th><%= t("activerecord.attributes.invoice.status") %></th>
      <th><%= t("activerecord.attributes.invoice.due_date") %></th>
      <th class="text-end"><%= t("activerecord.attributes.invoice.total_cents") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |inv| %>
      <tr>
        <td><%= link_to inv.number, inv %></td>
        <td><%= inv.client.name %></td>
        <td><%= status_badge(inv.status) %></td>
        <td><%= inv.due_date %></td>
        <td class="text-end"><%= money_cents(inv.total_cents, inv.currency) %></td>
        <td class="text-end">
          <%= link_to t("helpers.edit"), edit_invoice_path(inv), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to t("helpers.delete"), inv, data: { turbo_method: :delete, turbo_confirm: t("helpers.confirm") }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
